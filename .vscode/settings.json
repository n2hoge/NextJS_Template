{
  "extensions.ignoreRecommendations": true,
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[css]": {
    "editor.formatOnSave": false
  },
  "[scss]": {
    "editor.formatOnSave": false
  },

  "files.trimTrailingWhitespace": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "eslint.workingDirectories": ["wab_frontend"],
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "livePreview.portNumber": 8888,
  "jest.jestCommandLine": "yarn test",
  "jest.rootPath": "wab_frontend",
  "jest.autoRun": { "watch": true },
  "prettier.endOfLine": "lf",
  "prettier.tabWidth": 2,
  "css.validate": false,
  "scss.validate": false,
  "stylelint.validate": ["css", "scss"],
  "reactSnippets.settings.typescript": true,
  "reactSnippets.settings.languageScopes": "typescript,typescriptreact,javascript,javascriptreact"
}
